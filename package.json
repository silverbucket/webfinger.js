{
  "name": "webfinger.js",
  "version": "2.7.1",
  "description": "A client library to query WebFinger records",
  "license": "AGPL",
  "packageManager": "bun@1.1.42",
  "private": false,
  "keywords": [
    "webfinger",
    "webfist",
    "discovery",
    "hostmeta",
    "jrd",
    "finger",
    "useraddress",
    "lookup"
  ],
  "main": "./dist/webfinger.js",
  "types": "./dist/webfinger.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "author": {
    "name": "Nick Jennings",
    "email": "nick@silverbucket.net"
  },
  "scripts": {
    "build": "bun run tsc && bun build-dist.js",
    "build:clean": "rm -rf dist && bun run build",
    "prepublishOnly": "bun run build:clean",
    "lint": "eslint .",
    "test": "bun test",
    "test:ci": "bun run lint && bun test && bun run build",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/silverbucket/webfinger.js.git"
  },
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/silverbucket/webfinger.js/issues"
  },
  "homepage": "https://github.com/silverbucket/webfinger.js",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
