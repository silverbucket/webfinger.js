{
  "name": "webfinger.js",
  "version": "2.8.0",
  "description": "A client library to query WebFinger records",
  "license": "AGPL",
  "packageManager": "bun@1.1.42",
  "private": false,
  "keywords": [
    "webfinger",
    "webfist",
    "discovery",
    "hostmeta",
    "jrd",
    "finger",
    "useraddress",
    "lookup"
  ],
  "type": "module",
  "main": "./dist/webfinger.js",
  "types": "./dist/webfinger.d.ts",
  "exports": {
    ".": {
      "types": "./dist/webfinger.d.ts",
      "import": "./dist/webfinger.js",
      "require": "./dist/webfinger.js",
      "default": "./dist/webfinger.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "author": {
    "name": "Nick Jennings",
    "email": "nick@silverbucket.net"
  },
  "scripts": {
    "build": "bun run tsc --project tsconfig.dev.json && bun scripts/build.js --output .tmp/webfinger.js",
    "build:release": "bun run tsc && bun scripts/build.js --output dist/webfinger.js",
    "build:clean": "rm -rf dist && bun run build:release",
    "prepublishOnly": "bun run build:clean",
    "lint": "eslint .",
    "test:ts": "bun test test/webfinger.test.ts",
    "test:js": "bun test --env-file .env.test-js test/webfinger.test.ts",
    "test:integration": "bun test spec/integration/webfinger.controlled.integration.ts spec/integration/webfinger.integration.integration.ts",
    "test:browser": "wtr --config web-test-runner.config.mjs",
    "test:unit": "bun run build && bun run test:ts && bun run test:js",
    "test": "bun run test:unit && bun run test:integration && bun run test:browser",
    "test:help": "echo '🧪 WebFinger.js Test Commands:\n\n✅ bun run test        - Complete test suite (unit + integration + browser)\n📋 bun run test:unit   - Unit tests only (TypeScript + JavaScript)\n🌐 bun run test:browser - Browser tests only\n🔗 bun run test:integration - Integration tests only\n🧹 bun run lint       - Code linting\n\n⚠️  NOTE: \"bun test\" runs ALL tests and may have issues. Use \"bun run test\" instead.'",
    "prepare-release": "./scripts/prepare-release.sh",
    "prepare-release:patch": "./scripts/prepare-release.sh patch",
    "prepare-release:minor": "./scripts/prepare-release.sh minor",
    "prepare-release:major": "./scripts/prepare-release.sh major",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/silverbucket/webfinger.js.git"
  },
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/silverbucket/webfinger.js/issues"
  },
  "homepage": "https://github.com/silverbucket/webfinger.js",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-puppeteer": "^0.18.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "mocha": "^11.7.1",
    "prettier": "^3.4.2",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
